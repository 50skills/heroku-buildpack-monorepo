#!/usr/bin/env bash

indent() {
    sed -u 's/^/      /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

PROCFILE=$(cat ${ENV_DIR}/PROCFILE)

if [[ -z "${PROCFILE}" ]]; then
    echo "PROCFILE was not set. Aborting" | indent
    exit 1
fi

cp ${BUILD_DIR}/_procfiles/${PROCFILE} ${BUILD_DIR}

echo "Copied ${PROCFILE} as Procfile successfully" | indent
